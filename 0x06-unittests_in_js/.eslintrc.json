{
  "env": {
    "node": true,
    "mocha": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "semi": ["error", "never"],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "no-multi-spaces": "error",
    "no-extra-semi": "error",
    "max-len": ["error", { "code": 79 }],
    "keyword-spacing": ["error", { "before": true, "after": true }]
  }
}
